<div class="h-100 w-100">
  <div class="m-auto w-25">
    <h1 class="my-3">
      Add New Item
    </h1>
  </div>
  <form class="w-25 p-4 m-auto border border-dark rounded">
    <div class="row m-auto">
      <label class="" for="name">
        Item Name
      </label>
      <input
        class="form-control mb-2"
        type="text"
        name="name"
        id="name"
        placeholder="Item Name"
      />
      <label class="" for="description">
        Item Description
      </label>
      <textarea
        class="form-control mb-2"
        name="description"
        id="description"
        cols="30"
        rows="10"
        placeholder="Item Description"
      ></textarea>
      <label class="" for="price">
        Item Price
      </label>
      <input
        class="form-control mb-2"
        type="text"
        name="price"
        id="price"
        placeholder="Item Price"
      />
      <label for="select_buy_choice">
        Share/Rent/Buy?
      </label>
      <select
        class="form-control mb-2"
        name="select_buy_choice"
        id="select_buy_choice"
      >
        <option value="">
          Please select
        </option>
        <option value="buy">
          Buy
        </option>
        <option value="rent">
          Rent
        </option>
        <option value="share">
          Share
        </option>
      </select>
      <label class="" for="phone">
        Poster's Phone Number
      </label>
      <input
        class="form-control mb-2"
        type="tel"
        name="phone"
        id="phone"
        placeholder="Phone Number"
        pattern="[0-9]{3}-[0-9]{3}-[0-9]{4}"
      />
    </div>
    <div>
      <div class="row m-auto">
        <label for="address mb-0">
          Street Address
        </label>
        <input
          class="form-control mb-2"
          type="text"
          name="address"
          id="address"
          placeholder="Street Address"
        />
      </div>
      <div class="row m-auto">
        <div class="col p-0">
          <label class="mb-2" for="city">
            City
          </label>
          <input
            class="form-control ml-0"
            type="text"
            name="city"
            id="city"
            placeholder="City"
          />
        </div>
        <div class="col ml-1">
          <label class="mb-2" for="state">
            State
          </label>
          <select class="form-control ml-0" id="state" name="state">
            <option value="">
              Please Select...
            </option>
