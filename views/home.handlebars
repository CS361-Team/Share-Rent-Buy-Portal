<div
  class="row no-gutters bg-light mt-2 justify-content-center"
  id="home-header"
>
  <div class="jumbotron jumbotron-fluid mt-2 bg-transparent">
    <div class="container m-2 text-center">
      <h1 class="display-4 text-info">
        <strong>
          Share, Rent, or Buy Awesome Stuff
        </strong>
      </h1>
      <blockquote class="blockquote">
        <p>
          The Easiest Way to Find Greatness!!!
        </p>
      </blockquote>
      <div class="container mt-4">
        <form>
          <div class="form-row">
            <div class="col-sm-10 mb-2">
              <input class="form-control" type="text" id="input_search" placeholder="What are you looking for?" >
            </div>
            <div class="col-sm-2">
              <input type="button" class="form-control btn btn-info" id="input_search_button" value="Find it!">  
            </div>          
          </div>       
        </form>
      </div>
    </div>
  </div>
</div>
<div class="flex w-100 overflow-hidden">
  <a href="/addItem">
    <button
      type="button"
      class="btn btn-primary float-right m-2"
      id="goNewListing"
      href="/addItem"
    >
      Add New Listing
    </button>
  </a>
</div>


<!--card display of items-->
{{#if items}}
<div class="container">
  <h3 class=" text-muted text-center mb-4">Newest Additions</h3>
  <div class="row justify-content-center">
    {{#each items}}
    <div class="col-sm-6 col-md-3 mb-4">
      <div class="card h-100">
        <img class="card-img-top" src="..." alt="Replace with Attachement img">
        <div class="card-body">
          <h5 class="card-title text-truncate">{{this.Title}}</h5>
          <p class="card-text">{{this.Descr}}</p>
          <a class="card-text stretched-link" href="#"><small class="text-muted" id="{{this.Id}}_dist">{{this.City}}, {{this.ZipCode}}</small></a>
        </div>
      </div>
    </div>
    {{/each}}
  </div>
</div>
{{/if}}

<script src="scripts/home.js"></script>
